@model IEnumerable<NonimaDocente>

@{
    ViewData["Title"] = "Index";
}

<h1>Listado de Docentes por Grado</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Docente
            </th>
            <th>
                Materia
            </th>
            <th>
                Grado
            </th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Materia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Grado)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.NominaDocenteId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.NominaDocenteId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.NominaDocenteId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
